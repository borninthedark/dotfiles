# CAVA configuration based on GTK dark theme
# Save to: ~/.config/cava/config

[general]
# Smoothing mode. Can be 'normal', 'scientific' or 'waves'.
mode = normal

# Accepts only non-negative values.
framerate = 60

# 'autosens' will attempt to decrease sensitivity if the bars peak. 1 = on, 0 = off
autosens = 1

# Manual sensitivity in %. If autosens is enabled, this will only be the initial value.
sensitivity = 100

# The number of bars (0-512). 0 sets it to auto (fill up console).
bars = 0

# Width of bars. 1 is default. 2 is double width and so on.
bar_width = 2

# Gap between bars. 0 is no gap, default is 1.
bar_spacing = 1

# Lower and higher cutoff frequencies for lowest and highest bars
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

[input]
# Audio capturing method. Possible methods are: 'pulse', 'alsa', 'fifo', 'sndio' or 'shmem'
method = pulse

# Source for pulse. Default is 'auto', which uses the monitor source of the default sink
source = auto

[output]
# Output method. Can be 'ncurses', 'noncurses', 'raw', 'noritake', or 'sdl'
method = ncurses

# Visual channels. Can be 'stereo' or 'mono'.
channels = stereo

# Raw output target. A fifo will be created if target does not exist.
raw_target = /dev/stdout

# Raw data format. Can be 'binary' or 'ascii'.
data_format = binary

# Binary bit format, can be '8bit' (0-255) or '16bit' (0-65530).
bit_format = 16bit

# Ascii max value. In 'ascii' mode range will run from 0 to value specified here
ascii_max_range = 1000

# Ascii delimiters. In ascii format each bar and frame is separated by a delimiters.
bar_delimiter = 59
frame_delimiter = 10

[color]
# Colors can be one of seven predefined: black, blue, cyan, green, magenta, red, white, yellow.
# Or defined by hex code '#xxxxxx' (hex code must be within ''). User defined colors requires
# a terminal that can change color definitions such as Gnome-terminal or rxvt.

# Gradient mode, only hex defined colors (and thereby ncurses mode) are supported,
# background must also be defined in hex or remain commented out. 1 = on, 0 = off.
gradient = 1

# Gradient color scheme
# Based on GTK dark theme: from cyan accent (#9bbfbf) to blue (#458588)
gradient_count = 8
gradient_color_1 = '#9bbfbf'
gradient_color_2 = '#8bb5b5'
gradient_color_3 = '#7cabab'
gradient_color_4 = '#6da2a2'
gradient_color_5 = '#5e9898'
gradient_color_6 = '#508e8e'
gradient_color_7 = '#4a8a8a'
gradient_color_8 = '#458588'

# Foreground color for bars (not used when gradient is enabled)
foreground = '#9bbfbf'

# Background color (matching kitty background)
background = '#131519'

[smoothing]
# Percentage value for integral smoothing. Takes values from 0 - 100.
# Higher values means smoother, but less responsive.
integral = 77

# Disables or enables the so-called "Monstercat smoothing" with or without "waves".
# Set to 0 to disable.
monstercat = 0
waves = 0

# This one is tricky. You can have as much keys as you want.
# Remember to uncomment more than one key! More keys = more precision.
# Look at readme.md on github for further explanations and examples.
gravity = 100
ignore = 0

[eq]
# This one is tricky. You can have as much keys as you want.
# Remember to uncomment more than one key! More keys = more precision.
# Look at readme.md on github for further explanations and examples.
1 = 1 # bass
2 = 1
3 = 1 # midtone
4 = 1
5 = 1 # treble
